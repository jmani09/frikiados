<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context=".SelectWorld" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/background_dialog"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/butnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cerrar"
            android:contentDescription="@string/frikiadosImage" />

        <TextView
            android:id="@+id/textSettings"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/frikiadosSettings" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center" >

            <Button
                android:id="@+id/btnMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/music_on" />

            <Button
                android:id="@+id/btnSoundEffects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sound_on" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCredits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnCredits" />

        <Button
            android:id="@+id/btnOtherApps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnOtherApps" />
    </LinearLayout>

</LinearLayout>