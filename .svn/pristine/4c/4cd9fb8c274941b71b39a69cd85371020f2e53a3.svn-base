<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity" >
  <LinearLayout
      	android:id="@+id/linearLifes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="right"
        android:orientation="horizontal" >
    <ImageView
        android:id="@+id/imageLifes"
        android:layout_width="41dp"
        android:layout_height="42dp" 
        android:background="@drawable/corazon_rojo"
        android:contentDescription="@+id/frikiadosImage"
        android:visibility="invisible" />
    
    <TextView 
        android:id="@+id/numOfLifes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:text="@string/frikiadosLifes"
        android:visibility="invisible" 
        style="@style/text"/>
    </LinearLayout>
    
    <ImageView
        android:id="@+id/logoFrikiados"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.5"
        android:background="@drawable/logo_frikiados_beta"
        android:contentDescription="@+id/frikiadosImage"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnOnePlayer"
        style="@style/text"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:layout_weight="0.1"
        android:background="@drawable/background_btn_main"
        android:text="@string/btnOnePlayerString"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnVsClassic"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.1"
        android:background="@drawable/background_btn_main"
        android:text="@string/btnVsClassic"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnVsAdvanced"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.1"
        android:background="@drawable/background_btn_main"
        android:text="@string/btnVsAdvanced"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.16"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
    <Button
            android:id="@+id/btnShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_compartir"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_setting"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_perfil"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_megusta"
            android:visibility="invisible" />
         <Button
            android:id="@+id/btnRanking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_ranking"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/frikiadosBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="bottom"
        android:layout_marginBottom="-1dp"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>