<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity" >

        <ImageView
            android:id="@+id/logoFrikiados"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="25dp"
            android:layout_weight="0.4"
            android:background="@drawable/logo_frikiados_beta"
            android:contentDescription="@+id/frikiadosImage"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnOnePlayer"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="25dp"
            android:layout_weight="0.1"
            android:background="@drawable/background_btn_main"
            android:gravity="center"
            android:text="@string/btnOnePlayerString"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnVsClassic"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/btn_off"
            android:text="@string/proximamente"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnVsAdvanced"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/btn_off"
            android:text="@string/proximamente"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0.16"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnShare"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_compartir"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_setting"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnPerfil"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_perfil"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnRanking"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_ranking"
                android:visibility="invisible" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/frikiadosBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-1dp"
        android:background="@color/black"
        android:gravity="bottom"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>