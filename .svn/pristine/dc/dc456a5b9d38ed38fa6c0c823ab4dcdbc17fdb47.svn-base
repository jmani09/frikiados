<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".QuestionsActivity" >

    <TextView
        android:id="@+id/textQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:gravity="center"
        android:text="Quien es el protagonista principal de Dragon Ball?"
        android:textSize="30sp"
                android:visibility="invisible"/>

    <Button
        android:id="@+id/threeAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/twoAnswer"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:text="Vegeta"
        android:visibility="invisible"
        android:fillAfter="true"/>

    <Button
        android:id="@+id/twoAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/threeAnswer"
        android:layout_alignLeft="@+id/oneAnswer"
        android:text="Son Gohan"
                android:visibility="invisible"
        android:fillAfter="true"/>

    <Button
        android:id="@+id/oneAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/twoAnswer"
        android:layout_centerHorizontal="true"
        android:text="Son Goku"
        android:visibility="gone"
        android:fillAfter="true" />

    <TextView
        android:id="@+id/textTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:textSize="80sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/frikiRango"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Rango" />

    <TextView
        android:id="@+id/frikiQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="Pregunta"
        android:visibility="gone"  />

    <TextView
        android:id="@+id/frikiAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="Respuestas"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/startTutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textTimer"
        android:layout_centerHorizontal="true"
        android:text="Start Tutorial" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textTimer"
        android:layout_alignBottom="@+id/textTimer"
        android:layout_centerHorizontal="true"
        android:text="" 
        android:visibility="gone"/>

    <TextView
        android:id="@+id/frikiUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:textColor="@color/red"
        android:text="Vidas"
        android:visibility="gone" />

</RelativeLayout>