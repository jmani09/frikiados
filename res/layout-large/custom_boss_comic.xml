<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:gravity="center"
    tools:context=".SelectWorld" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_marginTop="50dp"
            android:id="@+id/imgRayo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoJefe"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rayo_1"
            android:contentDescription="@+id/frikiadosImage"
            android:gravity="center"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imgHumoOne"
            android:layout_width="fill_parent"
            android:layout_height="196dp"
            android:layout_below="@+id/logoJefe"
            android:layout_centerHorizontal="true"
             android:layout_marginTop="120dp"
            android:background="@drawable/humo_1"
            android:contentDescription="@+id/frikiadosImage"
            android:gravity="center"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imgJefe"
            android:layout_width="420dp"
            android:layout_height="302dp"
            android:layout_below="@+id/logoJefe"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/jefe_1"
            android:contentDescription="@+id/frikiadosImage"
            android:gravity="center"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imgHumoTwo"
            android:layout_width="fill_parent"
            android:layout_height="196dp"
            android:layout_below="@+id/logoJefe"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:background="@drawable/humo_1"
            android:contentDescription="@+id/frikiadosImage"
            android:gravity="center"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textJefeComic"
            style="@style/text"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgJefe"
            android:text="@string/frikiados_boss_comic"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnBoss"
            style="@style/text"
            android:layout_width="390dp"
            android:layout_height="66dp"
            android:layout_below="@+id/textJefeComic"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/background_btn_main"
            android:text="@string/btnBoss"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/logoJefe"
            android:layout_width="485dp"
            android:layout_height="196dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/logo"
            android:contentDescription="@+id/frikiadosImage"
            android:visibility="visible" />

    </RelativeLayout>

</LinearLayout>