<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:gravity="center"
    tools:context=".SelectWorld" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgRayo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rayo_1"
            android:contentDescription="@+id/frikiadosImage"
            android:gravity="center"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/logoJefe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/logo4"
            android:contentDescription="@+id/frikiadosImage"
            android:gravity="center"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imgHumoOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoJefe"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/humo_1"
            android:contentDescription="@+id/frikiadosImage"
            android:gravity="center"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imgJefe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoJefe"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/jefe_4"
            android:contentDescription="@+id/frikiadosImage"
            android:gravity="center"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imgHumoTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoJefe"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/humo_1"
            android:contentDescription="@+id/frikiadosImage"
            android:gravity="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textJefeComic"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgJefe"
            android:gravity="center"
            android:text="@string/frikiados_boss_videogames"
            android:visibility="invisible" />
        
        <Button
            android:id="@+id/btnBoss"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/textJefeComic"
            android:background="@drawable/background_btn_main"
            android:layout_centerHorizontal="true"
            android:text="@string/btnBoss"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>